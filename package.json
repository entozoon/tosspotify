{
  "name": "tosspotify",
  "version": "2.0.0",
  "description": "Control Spotify with global hotkeys (a la [Toastify](https://github.com/aleab/toastify) - which is dead at time of writing).",
  "main": "./app/js/main.js",
  "scripts": {
    "start": "npm-watch | npm run sass",
    "refresh": "electron .",
    "sass": "node-sass app/scss/app.scss --output app/css/ --watch --recursive --output-style compressed --include-path ./node_modules",
    "register": "electron -r babel-register .",
    "dist": "electron-packager . --out=dist --overwrite --version-string.FileDescription=electron-app-template",
    "something": "npm rebuild --runtime=electron --target=1.1.3 --disturl=https://atom.io/download/atom-shell --abi=48"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entozoon/tosspotify.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entozoon/tosspotify/issues"
  },
  "homepage": "https://github.com/entozoon/tosspotify#readme",
  "devDependencies": {
    "electron": "^1.4.1",
    "electron-packager": "^8.6.0"
  },
  "dependencies": {
    "appdata-path": "^0.1.2",
    "babel-eslint": "^6.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "electron-packager": "^8.6.0",
    "eslint": "^3.0.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-react": "^6.0.0",
    "iohook": "^0.2.0",
    "node-sass": "^4.5.3",
    "npm-watch": "^0.1.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "robotjs": "^0.5.1",
    "sass": "^0.5.0",
    "tasklist": "^3.1.1"
  },
  "watch": {
    "refresh": {
      "patterns": "*",
      "extensions": "js,jsx,css",
      "quiet": true
    }
  }
}
